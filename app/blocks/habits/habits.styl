.habits
	height 100vh
	background-image linear-gradient(180deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.25) 100%), url('../images/habits.png')
	background-size cover
	background-position 50% 100%

	&__title
		padding-top 217px
		text-align center
		color black
		font-size 60px
		font-weight 100
		font-family proxima_th

	&__desc
		margin 0 auto
		width 640px
		padding-top 20px
		text-align center
		font-size 20px
		font-weight 300
		line-height 24px
		font-family proxima_li

	&__features
		position relative
		margin 0 auto
		padding-top 33px
		display flex
		flex-direction row
		justify-content space-between
		width 752px

	&__icon
		width 80px

&__habit
	position absolute
	top 0
	left 0
	
