.page-terms-of-use
	margin 0 auto
	padding-top 80px
	display block
	width 1040px

	+below($tablet)
		padding 80px 16px 0
		width auto

	&__header
		margin 60px 0 30px
		font-family proxima_th
		font-size 60px
		line-height 72px
		color #000

		+below($tablet)
			font-size 32px
			line-height 39px

	&__subheader
		margin-bottom 16px
		font-family proxima_md
		font-size 20px
		line-height 34px

		+below($tablet)
			font-size 16px
			line-height 32px

	&__p
		margin-bottom 8px
		font-family proxima_rg
		font-size 20px
		line-height 34px

		+below($tablet)
			font-size 16px
			line-height 32px

		&_version
			text-align right

	&__block
		margin-bottom 40px

	&__list
		margin 10px 0
		list-style disc
		list-style-position inside
		font-size 20px
		line-height 34px

		+below($tablet)
			font-size 16px
			line-height 32px

	&__list-item
		margin-bottom 10px

	b
		font-weight bold

	i
		font-style italic

	u
		text-decoration underline

	.nows
		font-size 0px
		white-space nowrap

		span,
		b,
		i
			font-size 20px

			+below($tablet)
				font-size 16px

	&__link
		color #000

		&:hover
			text-decoration none
