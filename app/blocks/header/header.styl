.header
	position fixed
	z-index 10
	top 0
	right 0
	left 0
	background #fff

	&__content
		display block
		padding 17px 0 10px
		border-bottom 1px solid #e4e4e4

		+below($tablet)
			padding-left 30px
			padding-right 30px

		+below($mobile)
			margin 0
			padding-bottom 0

	&__logo
		display inline-block
		position relative
		margin-right 31px
		vertical-align top

		+below($mobile)
			float none
			margin-right 0
			padding-left 0
			display block
			text-align center

	&__nav
		display inline-block
		padding-top 8px
		font-size 20px
		line-height 23px
		vertical-align top
		background #fff


		+below($mobile)
			display block
			overflow hidden
			height 0
			transition height .4s ease-out

			&_visible
				height 100vh

	&__mobile-nav
		position absolute
		top 14px
		left 16px
		display block

		&_hidden
			display none

	&__burger
		width 24px
		height 14px

	&__close-nav
		margin-top -3px
		margin-left 2px
		width 20px
		height 20px

	&__lang
		float right
		padding-top 8px