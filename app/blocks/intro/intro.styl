@keyframes jump
  0%
  	top 0

  50%
  	top 20px

  100%
  	top 0

.intro
	position fixed
	z-index 12
	top 75px
	bottom 0
	left 50%
	max-width 1040px
	width 100%
	transform translate(-50%, 0)
	transition long-animation
	background #fff

	.fp-viewing-{slide4} &,
	.fp-viewing-{slide5} &,
	.fp-viewing-{slide6} &,
	.fp-viewing-{slide7} &,
	.fp-viewing-{slide8} &,
	.fp-viewing-{slide9} &,
	.fp-viewing-{slide10} &
		top -100%
		bottom 100%

	&__phone
		position absolute
		top -20%
		left 70px
		width 302px
		height 628px
		background url(../images/phone.png) center no-repeat
		background-size contain
		transform translate(0, -50%)
		// transition short-animation

		&:before
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			content ''
			background #fff
			opacity 1
			// transition short-animation

		.fp-viewing-{slide1} &
			top 50%
			opacity 1

			&:before
				opacity 0

	p
		margin-bottom 10px

	h1
		margin-bottom 20px
		header()

	&__text-1
		position absolute
		top 10%
		right 20px
		left 500px
		font-size 20px
		line-height 23px
		opacity 0
		// transition short-animation
		transform translate(0, -50%)

		.fp-viewing-{slide1} &
			top 50%
			opacity 1

	&__header-2
		position absolute
		right 0
		left 0
		bottom -50px
		text-align center
		opacity 0
		transition short-animation

		.fp-viewing-{slide2} &,
		.fp-viewing-{slide3} &
			bottom 25%
			opacity 1

	&__text-2
		position absolute
		right 0
		left 0
		bottom -50px
		font-size 20px
		line-height 23px
		text-align center
		opacity 0
		transition short-animation

		.fp-viewing-{slide2} &
			bottom 15%
			opacity 1

		.fp-viewing-{slide3} &
			bottom 15%
			opacity 0

	&__text-3
		position absolute
		right 0
		left 0
		bottom 15%
		font-size 20px
		line-height 23px
		text-align center
		opacity 0
		transition short-animation

		.fp-viewing-{slide3} &
			opacity 1

	&__ball
		position absolute
		top 130%
		left 70%
		margin-top -300px
		text-align center
		width 302px
		// transition long-animation

		.fp-viewing-{slide1} &
			top 140px
			left 0
			margin-top 0
			width 302px

		+small-height()
			top 120%
			
		+very-small-height()
			top 110%

	&__ball-image
		position absolute
		left 0
		width 450px
		height 450px
		// transition long-animation
		opacity 1
		transition ease-out 1s opacity

		.fp-viewing-{slide1} &
			position static
			width 150px
			height 160px
			
		.fp-viewing-{slide3} &
			opacity 0
			
		&_orange
			opacity 0
			
			.fp-viewing-{slide3} &
				opacity 1

	&__scroll-down
		position absolute
		left 50%
		bottom 150px
		padding-top 48px
		width 100px
		font-size 16px
		text-align center
		cursor pointer
		color #7e9fc0
		opacity 0
		transform translate(0, -50%)
		transition short-animation

		.fp-viewing-{slide1} &
			bottom 10px
			opacity 1

	&__jumper
		position absolute
		top 0
		left 38px
		width 24px
		height 24px
		background-color #9ac9ff
		border-radius 100%
		opacity .5
		animation jump .5s infinite
		animation-timing-function ease-out
