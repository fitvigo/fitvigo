long-animation = ease-out 1s all
short-animation = ease-out .5s all

.intro
	position fixed
	left 50%
	top -100%
	bottom 100%
	width 1040px
	margin-left -520px
	transition long-animation
	
	.fp-viewing-{slide1} &
	.fp-viewing-{slide2} &
	.fp-viewing-{slide3} &
		top 75px
		bottom 0
	
	&__phone
		position absolute
		left 70px
		transform translate(0, -50%)
		top 10%
		opacity 0
		width 302px
		height 80vh
		background url(../images/phone.png) center no-repeat
		background-size contain
		transition short-animation
		
		.fp-viewing-{slide1} &
			opacity 1
			top 50%
			
	&__paragraph
		margin-bottom 10px
		
	&__header
		font-family proxima_th
		font-size 60px
		line-height 70px
		margin-bottom 20px
			
	&__text-1
		position absolute
		left 500px
		right 20px
		top 10%
		opacity 0
		transform translate(0, -50%)
		font-size 20px
		line-height 23px
		transition short-animation
		
		.fp-viewing-{slide1} &
			opacity 1
			top 50%
			
	&__header-2
		position absolute
		left 0
		right 0
		opacity 0
		text-align center
		bottom -50px
		transition short-animation
		
		.fp-viewing-{slide2} &
		.fp-viewing-{slide3} &
			bottom 100px
			opacity 1
			
	&__text-2
		position absolute
		left 0
		right 0
		opacity 0
		text-align center
		line-height 23px
		bottom -50px
		transition short-animation
		
		.fp-viewing-{slide2} &
			bottom 60px
			opacity 1
			
		.fp-viewing-{slide3} &
			bottom 60px
			opacity 0
			
	&__text-3
		position absolute
		left 0
		right 0
		opacity 0
		text-align center
		line-height 23px
		bottom 60px
		transition short-animation
			
		.fp-viewing-{slide3} &
			opacity 1
		
	&__ball
		position absolute
		width 302px
		text-align center
		top 40%
		left 50%
		transition long-animation
		transform translate(-65%, -50%)
		
		.fp-viewing-{slide1} &
			transform translate(0, -90%)
			left 70px
			top 50%
		
	&__ball-image
		width 350px
		height 350px
		transition long-animation
		
		.fp-viewing-{slide1} &
			width 150px
			height 160px