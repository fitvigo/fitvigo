.languages
	display block
	position relative
	width 32px
	
	&:hover
		& ^[0]__item
			display block
	
	&__list
		position absolute
		top 25px
		left 0
		right 0
		background #fff
		box-shadow 0 2px 6px rgba(0, 0, 0, 0.25)
		border-radius 2px
		text-align center
		
	&__item
		display none
		border-bottom 1px solid #e4e4e4
		font-size 14px
		
		&_active
			display block
			position absolute
			top -25px
			left 0
			right 0
			border none
			font-size 20px
			
			& ^[0]__link
				line-height 25px
		
	&__link
		display block
		line-height 32px
		color #7e9fc0
		text-decoration none
		
		&:hover
			color #171f29
		