.protection
	display block

	&__header
		padding-top 120px
		margin-bottom 40px
		font-family proxima_th
		font-size 60px
		line-height 70px
		text-align center
		
	&__icon
		position relative
		text-align center
		margin-bottom 40px
		
	&__text
		width 650px
		margin 0 auto
		text-align center
		font-size 20px
		line-height 32px
		
	&__lock
		position relative
		width 120px
		height 120px
		
	&__lock-head
		position absolute
		left 50%
		margin-left -15px
		top -38px
		width 31px
		transition ease-out .2s top
		
		&_closed
			top -30px