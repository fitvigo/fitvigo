.index
	margin 0 auto
	display block

	&__fullpage-nav
		position fixed
		top 50%
		right 20px
		transform translate(0, -50%)

		a
			margin-top 4px
			margin-bottom 4px
			display block
			width 8px
			height 8px
			background-color #badaff
			border-radius 100%

			&.active
				background-color #7e9fc0

			& span
				display none
