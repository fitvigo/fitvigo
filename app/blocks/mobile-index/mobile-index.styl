.mobile-index
	display block

	&__title
		margin 30px 0
		text-align center
	
	h1
		text-align center
		header()
		
	&__phone
		margin 0 auto
		width 230px
		height 400px
		background url(../images/phone.png)
		background-size cover
		background-position top center
		box-shadow inset 0 -2px 1px rgba(0,0,0,.25)
		text-align center
		
	&__ball-image
		margin-top 80px
		width 150px
		height 170px
		
	&__ball
		text-align center
		
	&__ball-image-large
		width 100%
		max-width 350px
		height auto
		
	&__text
		margin 30px
		
		&_center
			text-align center
		
	p
		font-size 18px
		line-height 22px
		margin-bottom 15px
		
	&__header
		margin 30px 0 15px
		
	&__track
		position relative
		margin 0 15px
		
	&__track-bg
		width 100%
		height auto
		
	&__track-data
		position absolute
		left 0
		right 0
		top 10%
		bottom 10%
		background url('../images/track_data.png') left center no-repeat
		background-size contain
		
		&:before
			position absolute
			top 20px
			bottom 20px
			left 0
			right 0
			background rgba(#848cf9, .15);
			content ''