.products
	display block
	position fixed
	top 100%
	transition ease-out 1.2s all
	left 0
	right 0
	
	.fp-viewing-{slide10} &
		transition ease-in 1.2s all
		top 70px
		bottom 0
		overflow auto
		
	+below($switchNavAt)
		position static

	&__header
		margin-bottom 30px
		padding-top 90px
		font-family proxima_th
		header()
		text-align center

	&__list
		font-size 0
		text-align center

	&__item
		margin 0 30px
		display inline-block
		width 280px
		vertical-align top
		
		+below($tablet)
			width 200px
			margin 0 20px
		
		+below($switchNavAt)
			display block
			margin 0 auto 50px

	&__image
		height 200px

	&__title
		margin-bottom 10px
		font-family proxima_li
		font-size 32px
		line-height 39px
		text-align left

	&__desc
		margin-bottom 10px
		font-family proxima_li
		font-size 20px
		line-height 24px
		text-align left

	&__items
		text-align left

	&__link
		position relative
		margin-right 20px
		margin-bottom 10px
		display inline-block
		font-family proxima_li
		font-size 16px
		line-height 20px
		text-decoration none
		color #7e9fc0

		&:after
			position absolute
			top 7px
			right -12px
			width 4px
			height 4px
			content ''
			background #aaa
			border-radius 100%

		&:last-child:after
		&_no-dot:after
			display none

	&__footer
		position static
		text-align center
		margin-top 30px
		margin-bottom 30px

	&__copyright
		font-size 14px
		opacity .5
