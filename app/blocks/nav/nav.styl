.nav
	display block

	&__item
		margin-right 25px
		display inline-block

		+below($mobile)
			margin-right 0
			padding 20px 0 20px 16px
			display block
			border-top 1px solid #e4e4e4

	&__link
		text-decoration none
		color #7e9fc0


		&_active
			color #bbb

		&_external
			position relative
			padding-right 20px

			&:after
				position absolute
				top 4px
				right 0
				width 5px
				height 5px
				content ''
				border-top 1px solid #7e9fc0
				border-right 1px solid #7e9fc0

			&:before
				position absolute
				top 3px
				right 5px
				width 1px
				height 12px
				content ''
				border-right 1px solid #7e9fc0
				transform rotate(45deg)
