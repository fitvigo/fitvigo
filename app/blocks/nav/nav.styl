.nav
	display block
	
	&__list
		&_subnav
			position absolute
			top 100%
			left -15px
			background #fff
			box-shadow 0 2px 4px rgba(0,0,0,.2)
			padding 15px
			display none
			
			.nav__item
				margin 10px 0

	&__item
		position relative
		margin-right 25px
		display inline-block
		
		&_right
			margin-right 0
			float right

		+below($mobile)
			margin-right 0
			padding 20px 0 20px 16px
			display block
			border-top 1px solid #e4e4e4
			
		&:hover
			.nav__list_subnav
				display block

	&__link
		text-decoration none
		color #7e9fc0
		cursor pointer
		white-space nowrap

		&_active
			color #bbb

		&_external
			position relative
			padding-right 20px

			&:after
				position absolute
				top 4px
				right 0
				width 5px
				height 5px
				content ''
				border-top 1px solid #7e9fc0
				border-right 1px solid #7e9fc0

			&:before
				position absolute
				top 3px
				right 5px
				width 1px
				height 12px
				content ''
				border-right 1px solid #7e9fc0
				transform rotate(45deg)
