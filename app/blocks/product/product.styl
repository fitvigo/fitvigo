.product
	padding-top 80px
	display block

	&__images
		display block
		position relative
		height 320px
		
	&__image
		position absolute
		width 50%
		background-size cover
		background-position center
		
		&_left
			left 0
			top 0
			height 100%
			
		&_left-top,
		&_left-bottom
			left 0
			top 0
			height 100%
			height 50%
				
		&_left-bottom
			top auto
			bottom 0
			
		&_right
			right 0
			top 0
			height 100%
			
		&_right-top,
		&_right-bottom
			right 0
			top 0
			height 50%
				
		&_right-bottom
			top auto
			bottom 0
			
		+below($mobile)
			position static
			width 100%
			height 300px

	&__items
		& .product-item
			&:nth-child(2n)
				.product-item__data
					float right
					width 400px
					
				.product-item__image
					float left