.nav
	display block
	
	&__list
		&_subnav
			position absolute
			top 100%
			left -15px
			background #fff
			box-shadow 0 2px 4px rgba(0,0,0,.2)
			padding 15px
			display none
			
			.nav__item
				margin 10px 0
				
			+below($switchNavAt)
				position static
				display block
				padding 0
				box-shadow none
				height 0
				overflow hidden
				
				&:before
					position absolute
					margin-top -3px
					top 25px
					right 15px
					width 7px
					height 7px
					border-top 2px solid #9ac9ff
					border-right 2px solid #9ac9ff
					transform rotate(45deg)
					transition ease-out .3s all
					content ''
				
				&_visible
					padding-bottom 10px
					height auto
					
					&:before
						transform rotate(135deg)
				
				& .nav__item
					border none
					
					& .nav__link
						padding 5px 5px 5px 30px

	&__item
		position relative
		margin-right 25px
		display inline-block

		&:hover
			& .nav__list_subnav
				display block
				
		+below($switchNavAt)
			margin-right 0
			display block
			border-bottom 1px solid #e4e4e4
			

	&__link
		text-decoration none
		color #7e9fc0
		cursor pointer
		white-space nowrap

		&_active
			color #bbb
		
		+below($switchNavAt)
			position relative
			display block
			padding 16px

		&_external
			position relative
			padding-right 20px

			&:after
				position absolute
				top 4px
				right 0
				width 5px
				height 5px
				content ''
				border-top 1px solid #7e9fc0
				border-right 1px solid #7e9fc0

			&:before
				position absolute
				top 3px
				right 5px
				width 1px
				height 12px
				content ''
				border-right 1px solid #7e9fc0
				transform rotate(45deg)
				
			+below($switchNavAt)
				&:before,
				&:after
						display none
