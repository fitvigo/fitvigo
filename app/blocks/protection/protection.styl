.protection
	display block

	&__header
		margin-bottom 40px
		padding-top 120px
		font-family proxima_th
		font-size 60px
		line-height 70px
		text-align center

	&__icon
		position relative
		margin-bottom 40px
		text-align center

	&__text
		margin 0 auto
		width 650px
		font-size 20px
		line-height 32px
		text-align center

	&__lock
		position relative
		width 120px
		height 120px

	&__lock-head
		position absolute
		top -38px
		left 50%
		margin-left -15px
		width 31px
		transition ease-out .2s top

		&_closed
			top -30px
