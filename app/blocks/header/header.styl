.header
	position fixed
	z-index 10
	top 0
	right 0
	left 0
	background #fff

	&__content
		display block
		position relative
		height 70px
		border-bottom 1px solid #e4e4e4

		+below($tablet)
			padding-left 30px
			padding-right 30px

		+below($mobile)
			margin 0
			padding-bottom 0
			
	&__burger
		display none
		
		+below($switchNavAt)
			display block
			position absolute
			left 20px
			top 25px
			z-index 20

	&__logo
		float left
		position relative
		margin-right 31px
		padding-top 17px

		+below($switchNavAt)
			float none
			margin-right 0
			padding-left 0
			text-align center
			
	&__navigations
		padding-top 25px
		
		+below($switchNavAt)
			position fixed
			left 0
			top 70px
			right 0
			bottom 100%
			overflow auto
			background #fff
			padding 0
			overflow hidden
			transition bottom .4s ease-out

			&_visible
				bottom 0
				
	&__scroll
		height 100%
		
		+below($switchNavAt)
			overflow auto

	&__nav
		display inline-block
		font-size 20px
		line-height 23px
		background #fff
		
		+below($switchNavAt)
			display block


	&__lang
		float right
		
		+below($switchNavAt)
			float none
			margin-top 20px