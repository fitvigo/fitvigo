long-animation = ease-out 1s all
short-animation = ease-out .5s all

.track
	position fixed
	top -100%
	left 50%
	bottom 100%
	margin-left -520px
	width 1040px
	transition long-animation

	.fp-viewing-{slide1} &
	.fp-viewing-{slide2} &
	.fp-viewing-{slide3} &
		top 100%
		bottom -100%

	.fp-viewing-{slide4} &
	.fp-viewing-{slide5} &
	.fp-viewing-{slide6} &
		top 75px
		bottom 0

	&__heading
		margin-top 30px

	&__header
		margin-bottom 20px
		font-family proxima_th
		font-size 60px
		line-height 70px
		text-align center

	&__text
		font-size 20px
		line-height 23px
		text-align center

	&__bg
		position relative
		margin 50px auto 35px
		width 988px
		height 40vh
		background url('../images/track_bg.png')

	&__data
		position absolute
		top 50%
		left 0
		width 0
		height 204px
		transform translate(0, -50%)
		background url('../images/track_data.png') left center no-repeat
		transition long-animation

		.fp-viewing-{slide5} &
		.fp-viewing-{slide6} &
		&_visible
			width 100%

	&__mark
		position absolute
		right 0
		left 0
		bottom 20%
		height 0
		background #848cf9
		opacity .15
		transition short-animation

		.fp-viewing-{slide5} &
		.fp-viewing-{slide6} &
			height 60%

	&__products
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		font-size 0
		text-align center
		background #fff
		opacity 0
		transition short-animation

		.fp-viewing-{slide6} &
		.fp-viewing-{slide7} &
			opacity .95

	&__product
		position relative
		top 120px
		display inline-block
		width 33%
		text-align center
		opacity 0
		transition ease-out .6s all

		&_visible
			top 40px
			opacity 1

	&__desc
		position absolute
		right 0
		left 0
		bottom 30px
		text-align center
		opacity 0
		transition ease-out .5s all

		.fp-viewing-{slide4} &
			&_first
				opacity 1

		.fp-viewing-{slide5} &
			&_second
				opacity 1

		.fp-viewing-{slide6} &
			&_third
				opacity 1


	&__paragraph
		margin-bottom 10px
		font-size 20px
		line-height 24px
