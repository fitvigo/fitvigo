.imprint
	display block
	margin 0 auto
	padding-top 80px
	width 1040px

	+below($tablet)
		margin 0 16px
		width auto

	&__header
		margin 60px 0 30px
		font-family proxima_th
		font-size 60px
		line-height 72px
		color #000

		+below($tablet)
			margin-top 6px
			margin-bottom 0
			font-size 32px

	&__items
		margin-bottom 60px

	&__item
		display inline-block
		vertical-align top
		margin-right 40px
		width 320px
		font-size 20px
		line-height 34px

		&:last-child
			width 300px
			margin-right 0

		+below($tablet)
			display block
			font-size 16px

	&__item_manager
		+below($tablet)
			padding-top 33px
			padding-left 3px
			line-height 23px

	&__item_vat
		+below($tablet)
			padding-top 26px
			padding-left 3px
			line-height 30px

	&__bold
		font-family proxima_sb

	&__bold_manager
		+below($tablet)
			padding-bottom 8px
			display inline-block
			font-size 18px

	&__link
		color #7fa0c1
		text-decoration none

	&__break_mob
		display none

		+below($tablet)
			display block
