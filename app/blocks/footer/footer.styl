.footer
	margin 0 auto
	padding-top 25px
	padding-bottom 40px
	display block
	width 1040px
	border-top 1px solid #e4e4e4

	+below($tablet)
		padding 10px 0 35px
		width auto
		border none

	&__items
		margin-bottom 50px
		text-align center

		+below($tablet)
			display none

	&__item
		display inline-block
		text-align left
		vertical-align top

		&_app-info
			width 170px

		&_products
			width 310px

		&_imprint
			width 260px

	&__header
		margin-bottom 20px
		font-family proxima_rg
		font-size 20px
		line-height 32px
		color #333

	&__link
		display block
		font-size 20px
		line-height 32px
		text-decoration none
		color #8bafca

		&:hover
			color #000

		&_external
			position relative
			padding-right 20px

			&:after
				position absolute
				top 7px
				right 0
				width 5px
				height 5px
				content ''
				border-top 1px solid #7e9fc0
				border-right 1px solid #7e9fc0

			&:before
				position absolute
				top 6px
				right 5px
				width 1px
				height 12px
				content ''
				border-right 1px solid #7e9fc0
				transform rotate(45deg)

	&__copyright
		font-size 14px
		text-align center
		color black
		opacity .5
